// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

enum Unity {
    BH
    Contagem
    NovaLima
    Gutierrez
}

enum Profile {
    Admin
    Operador
}

model User {
    id        Int      @id @default(autoincrement())
    name      String
    email     String
    password  String   
    unity     Unity
    profile   Profile  @default(Operador)
    createdAt DateTime @default(now())
    updatedAt DateTime @default(now()) @updatedAt

    @@map("events_users")
}

model Guest {
    id             Int      @id @default(autoincrement())
    financial      String
    financialEmail String
    academic       String
    academicEmail  String
    father         String
    fatherEmail    String
    mother         String
    motherEmail    String
    student        String
    studentEmail   String
    course         String
    ra             String   @unique
    createdAt      DateTime @default(now())
    updatedAt      DateTime @default(now()) @updatedAt

    @@map("events_guests")
}
