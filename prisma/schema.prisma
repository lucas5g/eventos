enum Profile {
    Admin
    Gerente
    Operador
}

enum Alumni {
    yes
    no
}

model User {
    id          Int           @id @default(autoincrement())
    name        String
    email       String        @unique
    password    String
    unity       String
    profile     Profile       @default(Operador)
    GuestInvite GuestInvite[]
    createdAt   DateTime      @default(now())
    updatedAt   DateTime      @default(now()) @updatedAt
}

model Guest {
    id           Int      @id @default(autoincrement())
    father       String?
    fatherEmail  String?
    mother       String?
    motherEmail  String?
    student      String
    studentEmail String
    course       String
    ra           String   @unique
    unity        String
    alumni       Alumni
    createdAt    DateTime @default(now())
    updatedAt    DateTime @default(now()) @updatedAt
}

model GuestInvite {
    id           Int      @id @default(autoincrement())
    emailInvite  String
    motherEmail  String
    numberGuests Int
    kgFood       Int
    students     Json
    unity        String
    user         User     @relation(fields: [userId], references: [id])
    userId       Int
    comments     String?  @db.Text
    createdAt    DateTime @default(now())
    updatedAt    DateTime @default(now()) @updatedAt
}
