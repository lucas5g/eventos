// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

enum Unity {
    BH
    Contagem
    NovaLima
    Gutierrez
}

enum Profile {
    Admin
    Operador
}

enum Alumni {
    yes
    no
}

model User {
    id          Int           @id @default(autoincrement())
    name        String
    email       String        @unique
    password    String
    unity       Unity
    profile     Profile       @default(Operador)
    GuestInvite GuestInvite[]
    createdAt   DateTime      @default(now())
    updatedAt   DateTime      @default(now()) @updatedAt

    @@map("events_users")
}

model Guest {
    id             Int      @id @default(autoincrement())
    financial      String
    financialEmail String
    academic       String
    academicEmail  String
    father         String
    fatherEmail    String
    mother         String
    motherEmail    String
    student        String
    studentEmail   String
    course         String
    ra             String   @unique
    unity          Unity
    alumni         Alumni
    createdAt      DateTime @default(now())
    updatedAt      DateTime @default(now()) @updatedAt

    @@map("events_guests")
}

model GuestInvite {
    id           Int      @id @default(autoincrement())
    emailInvite  String
    motherEmail  String 
    numberGuests Int
    students     Json
    kgFood       Int
    unity        Unity
    user         User     @relation(fields: [userId], references: [id])
    userId       Int
    createdAt    DateTime @default(now())
    updatedAt    DateTime @default(now()) @updatedAt

    @@map("events_guests_invite")
}
